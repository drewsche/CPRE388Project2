<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<!--Top Level Vertical Layout-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
<!--       Horizontal Layout Occupying Top 50% of the screen-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0sp"
           android:layout_weight="50">
           <Button
               android:layout_width="0sp"
               android:layout_weight="33"
               android:layout_height="wrap_content"
               android:text="@string/camera_activity_button"
               android:id="@+id/buttonCameraActivity">
           </Button>
           <Button
               android:layout_width="0sp"
               android:layout_weight="33"
               android:layout_height="wrap_content"
               android:id="@+id/buttonUploadActivity"
               android:text="Upload Files Activity">
           </Button>

       </LinearLayout>

       <!--       Horizontal Layout Occupying Bottom 50% of the screen-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0sp"
           android:layout_weight="50">
       </LinearLayout>
   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>